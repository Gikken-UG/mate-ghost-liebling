{{!--
This pagination template is used to navigate through newer and older articles.
--}}

<div class="l-wrapper">
  <nav class="m-pagination" aria-label="{{t "Pagination" customLocale=(block "lang")}}">
    {{#if prev}}
      <a href="{{page_url prev}}" class="m-icon-button filled in-pagination-left" aria-label="{{t "Newer posts" customLocale=(block "lang")}}">
        <span class="icon-arrow-left"></span>
      </a>
    {{/if}}
    <span class="m-pagination__text">{{t "Page" customLocale=(block "lang")}} {{page}} {{t "of" customLocale=(block "lang")}} {{pages}}</span>
    {{#if next}}
      <a href="{{page_url next}}" class="m-icon-button filled in-pagination-right" aria-label="{{t "Older posts" customLocale=(block "lang")}}">
        <span class="icon-arrow-right"></span>
      </a>
    {{/if}}
  </nav>
</div>
